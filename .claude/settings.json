{
    "$schema": "https://json.schemastore.org/claude-code-settings.json",
    "env": {
        "ENABLE_LSP_TOOLS": "1"
    },
    "hooks": {
        "SessionStart": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/session-start.sh"
                    }
                ]
            }
        ],
        "PostToolUse": [
            {
                "matcher": "Edit",
                "hooks": [
                    {
                        "type": "command",
                        "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/post-edit-check.sh",
                        "timeout": 10000
                    }
                ]
            }
        ],
        "Stop": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/stop-odin-check.sh",
                        "timeout": 30000
                    }
                ]
            }
        ]
    }
}
